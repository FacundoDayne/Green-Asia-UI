@{
    Layout = null;
}

@model List<ClientDataModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title> Projects </title>
    <link rel="icon" type="images/png" img src="../../Images/greenAsiaLogo.png" alt="logo" />

    <link rel="stylesheet" href="~/css/project.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <div class="container">
        <nav>
            <ul>
                <li>
					<a class="logo" asp-area="" asp-controller="Employee" asp-action="employeeDashboard">
                        <img src="../../Images/greenAsiaLogo.png" alt="logo">
                        <span class="nav-item">GACTC</span>
                    </a>
                </li>
                <li>
					<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeDashboard">
                        <i class="fas fa-menorah"></i>
                        <span class="nav-item">Dashboard</span>
                    </a>
                </li>
                <li class="active">
					<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeProjectDash">
                        <i class="fas fa-chart-bar"></i>
                        <span class="nav-item">Projects</span>
                    </a>
				</li>
				<li>
					<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Templates">
						<i class="fas fa-briefcase"></i>
						<span class="nav-item">Templates</span>
					</a>
				</li>
                <li>
					<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeSupplierDash">
                        <i class="fas fa-briefcase"></i>
                        <span class="nav-item">Suppliers</span>
                    </a>
				</li>
				<li>
					<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeMaterialsDash">
						<i class="fas fa-briefcase"></i>
						<span class="nav-item">Materials</span>
					</a>
				</li>
				<li>
					<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeInfo">
						<i class="fas fa-briefcase"></i>
						<span class="nav-item">Account</span>
					</a>
				</li>
                <li>
					<a class="nav-link" asp-area="" asp-controller="Home" asp-action="HomePage">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="nav-item">Log out</span>
                    </a>
                </li>
            </ul>
        </nav>

        <section class="main">
            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="adminAddProject">
                <div class="main-top">
                    <h1>Projects</h1>
                    <i class="fas fa-wrench"></i>
                </div>
            </a>

            <section class="attendance">
                <div class="attendance-list">
                    <h1>Project List</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Contractor in charge</th>
                                <th>Type</th>
								<th>Address</th>
								<th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
							@for (int x = 0; x < Model.Count; x++)
							{
								<tr>
									<td>@Model[x].ID</td>
									<td>@Model[x].Description</td>
									<td>@Model[x].ContractorName</td>
									<td>@Model[x].Category</td>
									<td>@Model[x].Address</td>
									@if (Model[x].Status == 0)
									{
										<td>BOM Pending</td>
									}
									else if (Model[x].Status == 1)
									{
										<td>MCE Pending</td>
									}
									else if (Model[x].Status == 2)
									{
										<td>Processed</td>
									}
									<td>
										<span>@Html.ActionLink("View", "employeeProjectView", "Employee", new { id = Model[x].ID } )</span>
										@if (Model[x].BOMID != 0)
										{
											<span>@Html.ActionLink("View BOM", "BOMView", "Employee", new { id = Model[x].ID } ) </span>
											<span>@Html.ActionLink("BOM Client View", "BOMViewClient", "Employee", new { id = Model[x].ID } ) </span>
											@if (Model[x].MCEID == 0)
											{
												<span>@Html.ActionLink("Create MCE", "MCEAdd_New", "Employee", new { id = Model[x].ID } ) </span>
											}
											else if (Model[x].MCEID != 0)
											{
												<span>@Html.ActionLink("View MCE", "MCEView", "Employee", new { id = Model[x].ID } ) </span>
											}
										}
										else if (Model[x].BOMID == 0)
										{
											<span>@Html.ActionLink("Create BOM", "BOMGenerate", "Employee", new { id = Model[x].ID } ) </span>
										}
									</td>
								</tr>
							}
                        </tbody>
                    </table>
                </div>
            </section>
        </section>
    </div>
</body>
</html>
