@{
}
@model List<SupplierListItem>

<head>

</head>

<body>
	@Html.ActionLink("Back", "Index")
	@if (Model != null || Model.Count != 0)
	{
		foreach (SupplierListItem x in Model)
		{
			<div class="cards">
				<p>Name: @x.Description</p>
				<p>Contact Name: @x.ContactName</p>
				<p>Contact Number: @x.ContactNumber</p>
				<span>@Html.ActionLink("View Supplier", "SupplierView", "Employee", new { id = x.ID })</span>
			</div>
		}
	}
	else if (Model.Count == 0)
	{
		<h2 style="text-align:center;">No Supplier Yet</h2>
	}

	@Html.ActionLink("Add new supplier", "SupplierAdd", "Employee")
</body>
