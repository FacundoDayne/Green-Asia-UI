@{
    Layout = null;
}
@model NewEmployeeDashboardModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title> Contractor </title>
    <link rel="icon" type="images/png" img src="../../Images/greenAsiaLogo.png" alt="logo" />
    <link rel="stylesheet" href="~/css/employeeDash.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="sidebar">
        <div class="logo"></div>
        <ul class="menu">
            <li class="active">
                <a href="#">
                    <i class="fas fa-menorah"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
				<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeProjectDash">
                    <i class="fas fa-chart-bar"></i>
                    <span>Projects</span>
                </a>
			</li>
			<li>
				<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Templates">
					<i class="fas fa-briefcase"></i>
					<span class="nav-item">Templates</span>
				</a>
			</li>
			<!--
            <li>
				<a class="nav-link" asp-area="" asp-controller="Admin" asp-action="adminContractorDash">
                    <i class="fas fa-user"></i>
                    <span>Contractor</span>
                </a>
            </li>
			-->
            <li>
				<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeSupplierDash">
                    <i class="fas fa-briefcase"></i>
                    <span>Suppliers</span>
                </a>
			</li>
			<li>
				<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeMaterialsDash">
					<i class="fas fa-briefcase"></i>
					<span class="nav-item">Materials</span>
				</a>
			</li>
			<li>
				<a class="nav-link" asp-area="" asp-controller="Employee" asp-action="employeeInfo">
					<i class="fas fa-briefcase"></i>
					<span class="nav-item">Account</span>
				</a>
			</li>
            <li class="logout">
                <a asp-action="HomePage" asp-controller="Home">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main--content">
        <div class="header--wrapper">
            <div class="header--title">
                <span>Contractor</span>
                <h2>Dashboard</h2>
            </div>
            <div class="user--info">
                <!--<div class="search--box">
                    <i class="fa-solid fa-search"></i>
                    <input type="text" placeholder="Search" />
				</div>-->
                <img src="../../Images/image2.jpg" alt="">
            </div>
        </div>

        <div class="card--container">
            <h3 class="main--title">Explore</h3>
            <div class="card--wrapper">
				<a class="links" asp-area="" asp-controller="Employee" asp-action="employeeProjectDash">
                    <div class="payment--card light-purple">
                        <div class="card--header">
                            <div class="amount">
                                <span class="title">Projects</span>
								<span class="amount-value">@Model.NumOfPending New Projects</span>
								<span class="amount-value">@Model.NumOfComplete / @Model.NumOfProjects Projects Finished</span>
                            </div>
                            <i class="fas fa-peso-sign icon"></i>
                        </div>
                        <span class="card--detail">**** *** *** ***</span>
                    </div>
                </a>
				<!--
				<a class="links" asp-area="" asp-controller="Admin" asp-action="adminContractorDash">
                    <div class="payment--card light-purple">
                        <div class="card--header">
                            <div class="amount">
                                <span class="title">Contractor</span>
                                <span class="amount-value">Manage Contractors</span>
                            </div>
                            <i class="fas fa-list icon dark-purple"></i>
                        </div>
                        <span class="card--detail">**** *** *** ***</span>
                    </div>
                </a>-->

				<a class="links" asp-area="" asp-controller="Employee" asp-action="employeeSupplierDash">
                    <div class="payment--card light-green">
                        <div class="card--header">
                            <div class="amount">
                                <span class="title">Supplier</span>
                                <span class="amount-value">Manage Suppliers</span>
                            </div>
                            <i class="fas fa-users icon dark-green"></i>
                        </div>
                        <span class="card--detail">**** *** *** ****</span>
                    </div>
                </a>
            </div>
        </div>

        <div class="tabular--wrapper">
            <h3 class="main--title">New Projects</h3>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Action</th>
                        </tr>
                    <tbody>
						@for (int x = 0; x < Model.projects.Count; x++)
							{
								<tr>
									<td>@Model.projects[x].Description</td>
									<td>@Html.ActionLink("Create BOM", "BOMGenerate", "Employee", new { id = Model.projects[x].ID } )
									</td>
								</tr>
							}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="7">All Rights Reserved. 2023</td>
                        </tr>
                    </tfoot>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
