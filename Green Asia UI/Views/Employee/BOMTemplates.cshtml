<body>
	<div class="bomGrid">
		@Html.ActionLink("Back", "employeeProjectDash")
		@using (Html.BeginForm("Templates", "BOM", FormMethod.Post))
		{
			@foreach (Employee_BOMTemplate item in Model)
			{
				<div class="cards">
					<label>Template Name: @item.Description</label> <br>
					<label>Description: @item.Description_Long.ToString()</label><br>
					<!--<label>Project Cost: </label> <label class="Project Cost"> ----- </label> <br>-->
			@Html.ActionLink("Use", "BOMGenerate", "Employee", new { template_id = item.ID }, new { @class = "btn btn-primary" })
					<!--<p><a asp-action="MaterialCostEstimate" asp>Edit</a> || <a asp-action="MaterialCostEstimate">Create MCE</a></p>-->

				</div>
			}
		}
	</div>
