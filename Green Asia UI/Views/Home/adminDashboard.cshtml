@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title> Admin </title>
    <link rel="icon" type="images/png" img src="../../Images/greenAsiaLogo.png" alt="logo" />
    <link rel="stylesheet" href="~/css/dash.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="sidebar">
        <div class="logo"></div>
        <ul class="menu">
            <li class="active">
                <a href="#">
                    <i class="fas fa-menorah"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="adminProjectDash">
                    <i class="fas fa-chart-bar"></i>
                    <span>Projects</span>
                </a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="adminContractorDash">
                    <i class="fas fa-user"></i>
                    <span>Contractor</span>
                </a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="adminSupplierDash">
                    <i class="fas fa-briefcase"></i>
                    <span>Suppliers</span>
                </a>
            </li>
            <li class="logout">
                <a href="login.html">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main--content">
        <div class="header--wrapper">
            <div class="header--title">
                <span>Admin</span>
                <h2>Dashboard</h2>
            </div>
            <div class="user--info">
                <div class="search--box">
                    <i class="fa-solid fa-search"></i>
                    <input type="text" placeholder="Search" />
                </div>
                <img src="./images/image2.jpg" alt="">
            </div>
        </div>

        <div class="card--container">
            <h3 class="main--title">Explore</h3>
            <div class="card--wrapper">
                <a class="links" asp-area="" asp-controller="Home" asp-action="adminProjectDash">
                    <div class="payment--card light-red">
                        <div class="card--header">
                            <div class="amount">
                                <span class="title">Project</span>
                                <span class="amount-value">Add and Remove projects</span>
                            </div>
                            <i class="fas fa-peso-sign icon"></i>
                        </div>
                        <span class="card--detail">**** *** *** ***</span>
                    </div>
                </a>

                <a class="links" asp-area="" asp-controller="Home" asp-action="adminContractorDash">
                    <div class="payment--card light-purple">
                        <div class="card--header">
                            <div class="amount">
                                <span class="title">Contractor</span>
                                <span class="amount-value">Add and Remove Contractors</span>
                            </div>
                            <i class="fas fa-list icon dark-purple"></i>
                        </div>
                        <span class="card--detail">**** *** *** ***</span>
                    </div>
                </a>

                <a class="links" asp-area="" asp-controller="Home" asp-action="adminSupplierDash">
                    <div class="payment--card light-green">
                        <div class="card--header">
                            <div class="amount">
                                <span class="title">Supplier</span>
                                <span class="amount-value">Add and Remove Partners</span>
                            </div>
                            <i class="fas fa-users icon dark-green"></i>
                        </div>
                        <span class="card--detail">**** *** *** ****</span>
                    </div>
                </a>
            </div>
        </div>

        <div class="tabular--wrapper">
            <h3 class="main--title">Client data</h3>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Category</th>
                            <th>Action</th>
                        </tr>
                    <tbody>
                        <tr>
                            <td>2023-05-01</td>
                            <td>Mark Gomez</td>
                            <td>Bungalow</td>
                            <td>2,500,000</td>
                            <td>Residential</td>
                            <td><button>Edit</button></td>
                        </tr>
                        <tr>
                            <td>2023-05-01</td>
                            <td>Vegas Hardware</td>
                            <td>Hardware</td>
                            <td>-</td>
                            <td>Partner</td>
                            <td><button>Edit</button></td>
                        </tr>
                        <tr>
                            <td>2023-05-01</td>
                            <td>Amanda Sky</td>
                            <td>2 Storey</td>
                            <td>250,000,000</td>
                            <td>Residential</td>
                            <td><button>Edit</button></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="7">All Rights Reserved. 2023</td>
                        </tr>
                    </tfoot>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
