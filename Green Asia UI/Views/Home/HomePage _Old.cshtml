@using Green_Asia_UI.Models
@{
	ViewData["Title"] = "Login";
}
@model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="~/css/HomePageOld.css" asp-append-version="true" />
	<style>
		.field-validation-valid {
			display: none;
		}

		.validation-summary-valid {
			display: none;
		}
	</style>
</head>
<body>
    <div class="navbar">
        <h1>Green Asia</h1>
    </div>
	<p>@typeof(Controller).Assembly.GetName().Version.ToString()</p>
	<a asp-controller="Debug" asp-action="Index"><p>AAA</p></></a>
    <div class="login-container">
        <h2>Welcome back</h2>

		@using (Html.BeginForm("HomePage", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
		{
			@Html.AntiForgeryToken()
			<hr />
			@Html.ValidationSummary(false, "", new { @class = "text-danger" })
			<div class="form-group">
				@Html.LabelFor(m => m.Username, new { id = "usernameLabel", @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.Username, new { id = "usernameInput", @class = "form-control" })
					@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Password, new { id = "passwordLabel", @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.PasswordFor(m => m.Password, new { id = "passwordInput", @class = "form-control" })
					@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Log in" class="btn btn-default" />
				</div>
			</div>
		}

        <!--<form action="#" method="post">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="submit" value="Login">
		</form>-->
    </div>

	<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
</body>
</html>

